<!-- views/layouts/application.html.erb -->
<!DOCTYPE html>
<html>
  <head>
    <title>MiniCapstone</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <a href="/client/products">Home</a>
    <a href="/client/products/new">New Product</a>
    <a href="/signup">Sign Up</a>
    <a href="/client/login">Log In</a>
    <a href="/client/products?category=Sports">Sports</a>
    <a href="/client/products?category=Games">Games</a>
    <a href="/client/products?category=Tech">Tech</a>
    <%= @jwt %>
    <a href="/client/logout" data-method="delete">Log Out</a>
    <a href="/client/carted_products">Cart</a>
    <% flash.each do |name, message| %>
      <p><%= message %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
